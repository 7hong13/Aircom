<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/aircomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Aircom"
        android:textSize="100px" />

    <EditText
        android:id="@+id/email"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/aircomTextView"
        android:background="@drawable/circulus_button"
        android:hint="이메일"
        android:textColorHint="#66565C64"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp" />

    <EditText
        android:id="@+id/PW"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@id/email"
        android:layout_centerInParent="true"
        android:background="@drawable/circulus_button"
        android:ems="10"
        android:textColorHint="#66565C64"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp" />ㄴ

    <Button
        android:id="@+id/signInButton"
        android:layout_below="@id/PW"
        android:layout_width="200dp"
        android:minHeight="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:text="로그인"
        android:textColor="#000000" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleSignInButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/signInButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp">
    </com.google.android.gms.common.SignInButton>

    <TextView
        android:id="@+id/signUpTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/googleSignInButton"
        android:text="아직 회원이 아니신가요?"
        android:layout_marginTop="20dp"
        android:textSize="50px">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/sign_up"
        android:id="@+id/signUpLink"
        android:textSize="40px"
        android:clickable="true">
    </TextView>
</RelativeLayout>
