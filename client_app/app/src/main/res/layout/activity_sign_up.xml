<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/signUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="회원가입"
        android:textSize="100px" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_marginBottom="-40dp"
        android:layout_above="@id/nameForSignUp"
        android:layout_alignLeft="@id/nameForSignUp"
        android:layout_alignStart="@id/nameForSignUp"
        android:textSize="17dp">
    </TextView>
    <EditText
        android:id="@+id/nameForSignUp"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@id/signUpTextView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circulus_button"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:hint="이름을 입력하세요"
        android:textColorHint="#66565C64"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_marginBottom="-35dp"
        android:layout_above="@id/emailForSignUp"
        android:layout_alignLeft="@id/nameForSignUp"
        android:layout_alignStart="@id/nameForSignUp"
        android:textSize="17dp">
    </TextView>
    <EditText
        android:id="@+id/emailForSignUp"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@id/nameForSignUp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circulus_button"
        android:layout_marginTop="35dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:hint="이메일을 입력하세요"
        android:textColorHint="#66565C64"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="@string/pw"
        android:layout_marginBottom="-35dp"
        android:layout_above="@id/pwForSignUp"
        android:layout_alignLeft="@id/nameForSignUp"
        android:layout_alignStart="@id/nameForSignUp"
        android:textSize="17dp">
    </TextView>
    <EditText
        android:id="@+id/pwForSignUp"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@id/emailForSignUp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circulus_button"
        android:layout_marginTop="35dp"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:hint="숫자, 영어 포함 8자리"
        android:textColorHint="#66565C64"
        android:textColor="#000000" />
    <Button
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:minHeight="0dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/pwForSignUp"
        android:background="@drawable/rounded_button"
        android:text="회원가입"
        android:textColor="#000000" />



</RelativeLayout>
