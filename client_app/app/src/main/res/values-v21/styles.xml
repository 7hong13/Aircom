<resources>

    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v21/styles.xml on API 21+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material">
        <!-- API 21 theme customizations can go here. -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowBackground">#ffffff</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">#0052cc</item>
        <item name="android:fontFamily">@font/applesd</item>
        <item name="android:textColor">#000000</item>
        <item name="android:buttonTint">#0052cc</item>
        <item name="android:colorAccent">#0052cc</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:colorAccent">#0052cc</item>
        <item name="android:buttonTint">#0052cc</item>
        <item name="android:divider">@null</item>
        <item name="android:textSize">17dp</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

</resources>
